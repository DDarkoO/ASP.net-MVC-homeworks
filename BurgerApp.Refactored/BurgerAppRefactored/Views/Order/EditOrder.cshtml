@using BurgerApp.VIEWMODELS.OrderViewModels


@model OrderViewModel

<h3>Edit order</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditOrderPost" method="post">
            <input type="hidden" asp-for="@Model.Id" />
            <div class="form-group">
                <label asp-for="FullName" class="control-label">Name and surname</label>
                <input asp-for="FullName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label">Address</label>
                <input asp-for="Address" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BurgerId" class="control-label">Burger</label>
                <select class="form-control" asp-for="BurgerId" asp-items="@(new SelectList(ViewBag.ListOfBurgers, "Id", "Name"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label">Delivery location</label>
                <input asp-for="Location" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="IsDelivered" class="control-label"></label>
                <input asp-for="IsDelivered" type="checkbox"/>
            </div>
            <br />
            <button type="submit" class="btn btn-outline-dark">Confirm editing</button>
        </form>
    </div>
</div>